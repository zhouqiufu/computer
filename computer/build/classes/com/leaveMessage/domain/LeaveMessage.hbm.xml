<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.leaveMessage.domain">

	<!-- OR mapping -->
	<class name="LeaveMessage" table="LeaveMessage">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="name" length="60" />
		<property name="mail" type="string" column="mail" length="60" />
		<property name="tel" type="string" column="tel" length="60" />
		<property name="text" type="string" column="text" length="800" />
		<property name="dateTime" type="string" column="dateTime"
			length="60" />

	</class>

</hibernate-mapping>